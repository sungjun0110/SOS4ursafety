<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
            <shape xmlns:android="http://schemas.android.com/apk/res/android"
                android:shape="rectangle">
                <corners android:radius="20dp" />
                <gradient
                    android:startColor="#3CB527"
                    android:centerColor="#2B9818"
                    android:endColor="#1B700C"
                    android:angle="270" />
            </shape>
    </item>
    <item >
            <shape xmlns:android="http://schemas.android.com/apk/res/android"
                android:shape="rectangle">
                <corners android:radius="20dp" />
                <gradient
                    android:startColor="#4AD532"
                    android:centerColor="#37B621"
                    android:endColor="#279514"
                    android:centerX="80%"
                    android:angle="270" />
            </shape>
    </item>
</selector>

