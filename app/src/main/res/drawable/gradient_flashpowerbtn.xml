<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
            <shape xmlns:android="http://schemas.android.com/apk/res/android"
                android:shape="rectangle">
                <corners android:radius="25dp" />
                <gradient
                    android:startColor="#A5A33F"
                    android:centerColor="#75741B"
                    android:endColor="#4E4D08"
                    android:angle="270" />
            </shape>
    </item>
    <item android:state_selected="true">
            <shape xmlns:android="http://schemas.android.com/apk/res/android"
                android:shape="rectangle">
                <corners android:radius="25dp" />
                <gradient
                    android:startColor="#CAC84F"
                    android:centerColor="#BAB82D"
                    android:endColor="#8A890D"
                    android:angle="270" />
            </shape>
    </item>
    <item >
            <shape xmlns:android="http://schemas.android.com/apk/res/android"
                android:shape="rectangle">
                <corners android:radius="25dp" />
                <gradient
                    android:startColor="#FFFD65"
                    android:centerColor="#EDEB37"
                    android:endColor="#C8C611"
                    android:angle="270" />
            </shape>
    </item>
</selector>

